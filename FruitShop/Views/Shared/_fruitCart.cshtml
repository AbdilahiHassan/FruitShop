
@model FruitShop.Models.Fruit


<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.ImagethumnailUrl" alt="image for fruit shop" />
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>

            <h3>
                <a asp-controller="Fruit" asp-action="Details"
                   asp-route-id="@Model.FruitId">@Model.Name</a>
            </h3>

            <p>@Model.Description</p>
        </div>

        <div class="addToCart">
         <p class="button">
             <a class="btn-primary"
                asp-controller="ShoppingCart"
                asp-action="AddToshoppingCar"
                asp-route-fruitid="@Model.FruitId">Add to Cart</a>

         </p>
        </div>

    </div>

</div>